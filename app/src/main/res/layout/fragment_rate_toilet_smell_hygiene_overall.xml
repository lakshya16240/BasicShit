<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FE6600"
    app:cardCornerRadius="40dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_smell_hygiene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smell and Hygiene"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:textSize="33sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_smell_hygiene"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_smell_hygiene"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_centerInParent="true">

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_overallRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overall Rating"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:textSize="33sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_overall_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_overallRating"
                app:cardCornerRadius="15dp"
                android:layout_centerInParent="true">

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:textSize="33sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_feedback"
                android:layout_below="@id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="70dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:hint="Say Something ..."/>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:background="@drawable/rounded_corner_rate_toilet"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:elevation="14dp"
            android:textColor="#FE6600"/>

    </LinearLayout>



</android.support.v7.widget.CardView>