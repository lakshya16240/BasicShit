<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FE6600"
    app:cardCornerRadius="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Who can use this Toilet?"
                android:textSize="24sp"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/male_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="40dp"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/male_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/male"/>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="18sp"
                        app:elevation="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/male_card"
                        android:background="@drawable/rounded_corner_rate_toilet"
                        android:layout_gravity="center_horizontal"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/female_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:id="@+id/female_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/female"/>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Female"
                        app:elevation="15dp"
                        android:textSize="18sp"
                        android:layout_below="@+id/female_card"
                        android:background="@drawable/rounded_corner_rate_toilet" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/child_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:id="@+id/child_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="53dp"
                            android:layout_marginRight="53dp"
                            android:layout_marginTop="63dp"
                            android:layout_marginBottom="63dp"
                            android:layout_gravity="center"
                            android:src="@drawable/child"/>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Child"
                        app:elevation="15dp"
                        android:textSize="18sp"
                        android:layout_below="@+id/child_card"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rounded_corner_rate_toilet"
                        android:layout_gravity="center_horizontal"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/disabled_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:id="@+id/disabled_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="43dp"
                            android:layout_marginRight="43dp"
                            android:layout_marginTop="49dp"
                            android:layout_marginBottom="49dp"
                            android:src="@drawable/disabled"/>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Disabled"
                        android:textSize="18sp"
                        app:elevation="15dp"
                        android:layout_below="@+id/disabled_card"
                        android:background="@drawable/rounded_corner_rate_toilet" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
</android.support.v7.widget.CardView>