    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="64dp"
        android:layout_marginLeft="64dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->

            <ImageView
                android:id="@+id/iv_image_slideup"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginBottom="10dp"
                android:src="@drawable/no_images_placeholder" />

            <TextView
                android:id="@+id/tv_slide_placeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_toRightOf="@id/iv_image_slideup"
                android:maxLines="1"
                android:text="Place Name"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <RatingBar
                android:id="@+id/ratingBar_slide_placeRating"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX=".7"
                android:scaleY=".7"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:layout_alignBottom="@+id/iv_image_slideup"
                android:layout_toEndOf="@+id/iv_image_slideup" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
