<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/floating_menu_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/floating_menu_item2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_line_floating_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/fab_line_floating_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_line_floating_menu"
            android:layout_toRightOf="@+id/tv_line_floating_menu"
            app:srcCompat="@drawable/baseline_remove_black_24dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/floating_menu_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/floating_menu_item1">

        <TextView
            android:id="@+id/tv_point_floating_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Point"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/fab_point_floating_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_point_floating_menu"
            android:layout_toRightOf="@+id/tv_point_floating_menu"
            app:srcCompat="@drawable/floating_menu_location" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cross_floating_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@+id/floating_menu_item2"
        app:layout_constraintStart_toStartOf="@+id/floating_menu_item2"
        app:layout_constraintTop_toBottomOf="@+id/floating_menu_item2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/floating_menu_close" />
    </RelativeLayout>




</android.support.constraint.ConstraintLayout>